generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["jsonProtocol"]
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model Tab {
    id                 Int       @id @default(autoincrement())
    title              String
    tuning             String
    bpm                Int?
    tabData            Json
    sectionProgression Json
    description        String?
    timeSignature      String?
    capo               Int?
    createdAt          DateTime  @default(now())
    createdById        String
    genre              Genre     @relation(fields: [genreId], references: [id])
    genreId            Int
    comments           Comment[]
    likes              Likes[]

    @@index([createdById]) // not sure if we need these indicies anymore, or if they are beneficial to us since we removed the User model
    @@index([genreId])
}

// Junction table for likes
model Likes {
    id     Int    @id @default(autoincrement())
    userId String
    tab    Tab    @relation(fields: [tabId], references: [id])
    tabId  Int

    @@index([userId]) // not sure if we need these indicies anymore, or if they are beneficial to us since we removed the User model
    @@index([tabId])
}

model Genre {
    id    Int    @id @default(autoincrement())
    name  String @unique
    color String
    tabs  Tab[]
}

model Comment {
    id        Int       @id @default(autoincrement())
    text      String
    createdAt DateTime  @default(now())
    authorId  Int
    tab       Tab       @relation(fields: [tabId], references: [id])
    tabId     Int
    replyTo   Comment?  @relation("Replies", fields: [replyToId], references: [id], onDelete: NoAction, onUpdate: NoAction)
    replyToId Int?
    replies   Comment[] @relation("Replies")

    @@index([tabId])
    @@index([authorId]) // not sure if we need these indicies anymore, or if they are beneficial to us since we removed the User model
    @@index([replyToId])
}

model PromotedArtist {
    id        Int      @id @default(autoincrement())
    artistId  Int      @unique
    startDate DateTime
    endDate   DateTime
}
